---
# create optimized spec books json for table
# only builds if spec_books-build is true
---
{%- if site.spec_books-build == true or jekyll.environment == "production" -%}
{%- assign items = site.data.spec_books -%}
{ "objects" : [
{%- for i in items -%}[{{ i.title | jsonify }},{% if i.author %}{{ i.author | jsonify }}{% else %}""{% endif %},{{ i.call_number | jsonify }},{{ i.group | jsonify }},{% if i.date %}{{ i.date | jsonify }}{% else %}""{% endif %}]{% unless forloop.last %},{% endunless %}
{% endfor %}
] }{% endif %}
